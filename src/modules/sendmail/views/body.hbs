<table cellpadding="20" cellspacing="0" border="0">
  <tr bgcolor="#505154">
    <td width="600" align="center">
      <p style="
      font-size: 24px;
      font-family: Arial, Helvetica, sans-serif;
      line-height: 22px;
      text-align: center;
      color: #ffffff;
      border-bottom: 1px solid #7b7b7b;
      padding-bottom: 20px;
      margin: 0;">
        <strong>{{channel}}</strong>
      </p>
    </td>
  </tr>
  {{#each list}}
    <tr bgcolor="#505154">
      <td width="600" align="center">
        <p style="
        font-size: 18px;
        font-family: Arial, Helvetica, sans-serif;
        line-height: 22px;
        text-align: center;
        color: #ffffff;
        margin: 0;">
          <strong>{{title}}</strong>
        </p>

        <br />

        <img src="{{thumbnail}}" border="0">

        <br />
        <br />
        {{#if modified}}
          <p style="
          font-size: 14px;
          font-family: Arial, Helvetica, sans-serif;
          line-height: 22px;
          text-align: left;
          color: #ffffff;
          margin: 0;">
            <strong>MODIFICADO EM: </strong>{{modified}}
          </p>
          <br />
        {{/if}}
        {{#if issueNumber}}
          <p style="
          font-size: 14px;
          font-family: Arial, Helvetica, sans-serif;
          line-height: 22px;
          text-align: left;
          color: #ffffff;
          margin: 0 0 0 0;">
            <strong>Nº DA EDIÇÃO: </strong>{{issueNumber}}
          </p>
          <br />
        {{/if}}
        {{#if pageCount}}
          <p style="
          font-size: 14px;
          font-family: Arial, Helvetica, sans-serif;
          line-height: 22px;
          text-align: left;
          color: #ffffff;
          margin: 0 0 0 0;">
            <strong>QUANTIDADE DE PÁGINAS: </strong>{{pageCount}}
          </p>
          <br />
        {{/if}}
        <p style="
        font-size: 14px;
        font-family: Arial, Helvetica, sans-serif;
        line-height: 22px;
        text-align: left;
        color: #ffffff;
        margin: 0 0 20px 0;">
          {{description}}
        </p>
        <br />
      </td>
    </tr>
  {{/each}}
</table>
